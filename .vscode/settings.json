{
	// TypeScript Configuration
	"typescript.tsdk": "node_modules/typescript/lib",

	// File Endings and Package Manager
	"files.eol": "\n",
	"npm.packageManager": "pnpm",

	// Auto fix & Organize Imports
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "never"
	},

	// File Explorer Settings
	"explorer.fileNesting.patterns": {
		"package.json": ".darklua.json, .gitattributes, .gitignore, .npmrc, asphalt.toml, commitlint.config.ts, cspell.config.yaml, eslint.config.ts, flamework.build, pnpm-lock.yaml, renovate.json, rokit.toml",
		"README.md": "LICENSE",
		"*.rbxl": "*.rbxl.lock"
	},

	// File Exclusion
	"files.exclude": {
		"patches": true,
		".husky": true,
		".github": true,
		"include": true
	},

	// Custom Labels for Index Files
	"workbench.editor.customLabels.patterns": {
		"**/index.ts": "${dirname}.ts"
	},

	// Editor Settings
	"workbench.editor.enablePreview": false,

	// ESLint Configuration
	"eslint.run": "onType",
	"eslint.format.enable": true,
	"eslint.useFlatConfig": true,
	"eslint.rules.customizations": [
		{
			"rule": "style/*",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "format/*",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*-indent",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*-spacing",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*-spaces",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*-order",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*-dangle",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*-newline",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*quotes",
			"severity": "off",
			"fixable": true
		},
		{
			"rule": "*semi",
			"severity": "off",
			"fixable": true
		}
	],
	"eslint.validate": [
		"typescript",
		"typescriptreact",
		"markdown",
		"json",
		"jsonc",
		"yaml",
		"toml",
		"luau"
	]
}
